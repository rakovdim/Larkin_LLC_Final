<% provide(:title, 'Orders Delivery') %>
<script>
  window._token = '<%= form_authenticity_token %>';
</script>
<div class="container load_management">
  <div class="row">
    <h4>Delivery Parameters</h4>
  </div>
  <div class="row top-buffer-small">
    <div class="col-sm-6">
      <label>Delivery Date</label>

      <div class="order-value">
        <input id="delivery_date_input" type="text" class="datepicker" value="<%= @load.delivery_date.strftime("%m/%d/%Y") %>">
      </div>
    </div>
    <div class="col-sm-6">
      <label>Truck</label>

      <div class="order-value"><%= @load.truck.name %></div>
    </div>
  </div>

  <div class="row top-buffer-small">
    <div class="col-sm-6">
      <label>Delivery Shift</label>

      <div class="order-value"><%= select(:load, :delivery_shift, Load.delivery_shifts.keys) %></div>
    </div>
  </div>

  <div class="row top-buffer">
    <h4>Orders to Delivery</h4>
  </div>

  <div class="row top-buffer-small">
    <div class="dt-buttons">
      <button id="download_routing_list_button" class="btn-link toolbar-button" tabindex="0">Download Routing List
      </button>
    </div>
    <hr>
    <table class='table table-striped table-bordered orders-table nowrap  ' id="orders_delivery_table">
      <thead>
      <tr>
        <th>Stop №</th>
        <th>Order №</th>
        <th>Type</th>
        <th>Volume</th>
        <th>Quantity</th>
        <th>Origin Address</th>
        <th>Destination Address</th>
        <th>Phone Number</th>
      </tr>
      </thead>
      <tbody id="tbody"></tbody>
    </table>
  </div>
</div>